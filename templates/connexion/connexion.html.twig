{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}
    
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/css/connexion-page.css') }}"/>
{% endblock %}

{% block body %}

    <h2>AUTHENTIFICATION</h2>

    <form action="{{ path('connexion_page') }}" method="POST">
        <div>
            <label for="_username">Adresse email</label></br>
            <input type="text" placeholder="Adresse email ..." required name="_username"/>
        </div>
        <div>
            <label for="_password">Mot de passe</label></br>
            <input type="password" placeholder="Mot de passe ..." required name="_password"/>
        </div>
        <div>
            <button class="btn btn-succes" type="submit">CONNEXION</button>
        </div>
    </form>

{% endblock %}